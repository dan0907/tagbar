function! GuiTabLabel()
	let label = '(' . v:lnum . ')'
	let bufnrlist = tabpagebuflist(v:lnum)
	let isModified = 0
	for bufnr in bufnrlist
		let curBufname = bufname(bufnr)
		if curBufname !=# '' && curBufname !~# '\(NERD_tree\|__Tagbar__\|vim.\+doc.\+\.txt\)'
			let label .= ' ' . curBufname . ' '
		endif
		if !isModified && getbufvar(bufnr, "&modified")
			let isModified = 1
		endif
	endfor
	if isModified
		let label .= '[+]'
	endif
	return label
endfunction
